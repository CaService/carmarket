# Imposta il tipo MIME corretto per i file JavaScript
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/javascript .js
AddType text/javascript .mjs
# Aggiungi questa riga per i moduli ES
AddType application/javascript .jsx
AddType text/javascript .jsx

# Aggiungi questa riga specifica per i moduli ES
AddHandler application/javascript .js
AddHandler application/javascript .mjs
AddHandler application/javascript .jsx

# Per i file source map
AddType application/json .map

# Per i file di manifest
AddType application/manifest+json .webmanifest

# Abilita la compressione
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>

# Directory index
DirectoryIndex index.html

# Forza HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Forza HTTPS per tutto il sito
    RewriteCond %{HTTPS} !=on
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    RewriteBase /repositories/carmarket/
    
    # Serve files statici direttamente se esistono
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Serve directory se esistono
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Gestisci le richieste API
    RewriteCond %{REQUEST_URI} ^/repositories/carmarket/server/api/
    RewriteRule ^ - [L]
    
    # Tutte le altre richieste vanno a index.html
    RewriteRule . index.html [L]
</IfModule>

# Headers per i file statici
<FilesMatch "\.(js|mjs)$">
    Header set Content-Type "application/javascript"
</FilesMatch>

# Permetti l'esecuzione di file PHP (di solito gi√† configurato in XAMPP)
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Aggiungi headers di sicurezza
<IfModule mod_headers.c>
    # Force HTTPS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Prevent MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # CORS headers
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "DNT,X-CustomHeader,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type"
</IfModule>

# Cache control
<FilesMatch "\.(js|css|jpg|jpeg|png|gif|ico|svg)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>