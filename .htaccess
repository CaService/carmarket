# Imposta il tipo MIME corretto per i file JavaScript
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/javascript .js
AddType text/javascript .mjs
# Aggiungi questa riga per i moduli ES
AddType application/javascript .jsx
AddType text/javascript .jsx

# Aggiungi questa riga specifica per i moduli ES
AddHandler application/javascript .js
AddHandler application/javascript .mjs
AddHandler application/javascript .jsx

# Per i file source map
AddType application/json .map

# Per i file di manifest
AddType application/manifest+json .webmanifest

# Abilita la compressione
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/javascript text/javascript text/css application/json
</IfModule>

# Directory index
DirectoryIndex index.html

# Abilita la riscrittura URL
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Imposta il percorso base per le regole di riscrittura relative
    RewriteBase /repositories/carmarket/

    # --- Gestione API ---
    # Permetti accesso diretto ai file PHP dentro /server/api/
    RewriteCond %{REQUEST_URI} ^/repositories/carmarket/server/api/ [NC]
    RewriteRule ^ - [L]

    # --- Gestione File Statici ---
    # Se la richiesta è per un file esistente nelle cartelle assets, static, images, ecc.
    # (Adatta i nomi delle cartelle se necessario)
    RewriteCond %{REQUEST_URI} ^/repositories/carmarket/(assets|static|images)/ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Permetti anche l'accesso a file comuni nella root (es. favicon, immagini da /public)
    RewriteCond %{REQUEST_URI} ^/repositories/carmarket/[^/]+\.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|eot|pdf)$ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # --- Routing SPA ---
    # Se la richiesta NON è per un file esistente E NON è per una directory esistente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Reindirizza a index.html per React Router
    RewriteRule . index.html [L]

</IfModule>

# Headers per i file statici
<FilesMatch "\.(js|mjs)$">
    Header set Content-Type "application/javascript"
</FilesMatch>

# Permetti l'esecuzione di file PHP (di solito già configurato in XAMPP)
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php # Modifica se necessario per LiteSpeed
</FilesMatch>
AddType application/x-httpd-php .php

